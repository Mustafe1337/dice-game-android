<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:orientation="horizontal"
    android:columnCount="2"
    android:rowCount="4"
    android:background="#a00df268">


    <Button android:id="@+id/button_one"
        android:text="@string/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textSize="13sp"
        android:layout_marginTop="117dp"
        android:layout_below="@+id/button_one"
        android:layout_alignLeft="@+id/button_one"
        android:layout_alignStart="@+id/button_one"
        android:onClick="sendMessage"/>


    <Button android:id="@+id/button_one"
        android:text="@string/how_to_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/how_to_play_button"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_marginTop="207dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="howToPlay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="69"
        android:id="@+id/textView"
        android:layout_marginBottom="90dp"
        android:layout_alignBottom="@+id/button_one"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="45sp"
        android:layout_alignParentStart="false"
        android:textStyle="normal" />


</RelativeLayout>
